@model Assignment_1_G_92_2139.Models.Order

    <h2>Order Confirmation</h2>

    <p><strong>Order ID:</strong> @Model.OrderId</p>
    <p><strong>Name:</strong> @Model.GuestName</p>
    <p><strong>Email:</strong> @Model.GuestEmail</p>
    <p><strong>Order Date:</strong> @Model.OrderDate</p>

    <h3>Items:</h3>
    <table class="table">
    <thead>
    <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderItems)
{
    <tr>
        <td>@item.Product.Name</td>
        <td>@item.Quantity</td>
        <td>@item.Price</td>
        <td>@(item.Quantity * item.Price)</td>
        </tr>
}
</tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Place Another Order</a>