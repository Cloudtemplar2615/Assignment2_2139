@model IEnumerable<Assignment_1_G_92_2139.Models.Order>

<h2>All Orders</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Guest Name</th>
        <th>Guest Email</th>
        <th>Products</th>
        <th>Total Amount</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.GuestName</td>
            <td>@order.GuestEmail</td>
            <td>
                <ul>
                    @foreach (var item in order.OrderItems)
                    {
                        <li>@item.Product.Name - Quantity: @item.Quantity</li>
                    }
                </ul>
            </td>
            <td>@order.OrderItems.Sum(i => i.Price * i.Quantity)</td>
        </tr>
    }
    </tbody>
</table>